{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es2016"],
        "outDir": "./build",
        "rootDir": "./src",
        "strict": true,
        "noImplicitAny": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": false,
        "esModuleInterop": true,
        "moduleResolution": "node"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": ["./node_modules"]
}