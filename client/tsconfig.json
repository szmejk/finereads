{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es2015",
            "es2017",
            "dom"
        ],
        "removeComments": true,
        "allowSyntheticDefaultImports": false,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "jsx": "react",
        "allowJs": true,
        "baseUrl": "./",
        "rootDir": "./src",
        "strict": true,
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": ["./node_modules"]
}